<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: Teal;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.customerController">
   <children>
      <Label layoutX="379.0" layoutY="30.0" text="Customer Information">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button fx:id="addCustomerBtn" layoutX="300.0" layoutY="100.0" mnemonicParsing="false" onAction="#toAddCustomerPage" text="Add Customer">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="modifyCustomerBtn" layoutX="425.0" layoutY="100.0" mnemonicParsing="false" onAction="#toModifyCustomerPage" text="Modify Customer">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="deleteCustomerBtn" layoutX="560.0" layoutY="100.0" mnemonicParsing="false" onAction="#deleteCustomer" text="Delete Customer">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <TableView layoutX="25.0" layoutY="150.0" prefHeight="388.0" prefWidth="950.0">
        <columns>
          <TableColumn fx:id="customerIdCol" minWidth="75.0" prefWidth="75.0" text="Customer ID" />
          <TableColumn fx:id="customerNameCol" minWidth="100.0" prefWidth="100.0" text="Customer Name" />
            <TableColumn fx:id="addressCol" minWidth="150.0" prefWidth="150.0" text="Address" />
            <TableColumn fx:id="zipCodeCol" minWidth="75.0" prefWidth="75.0" text="Zip Code" />
            <TableColumn fx:id="countryCol" minWidth="75.0" prefWidth="75.0" text="Country" />
            <TableColumn fx:id="phoneNumCol" minWidth="100.0" prefWidth="100.0" text="Phone" />
            <TableColumn fx:id="createdByCol" minWidth="75.0" prefWidth="75.0" text="Created By" />
            <TableColumn fx:id="createdDateCol" minWidth="100.0" prefWidth="100.0" text="Created Date" />
            <TableColumn fx:id="updatedByCol" minWidth="100.0" prefWidth="100.0" text="Updated By" />
            <TableColumn fx:id="updatedDateCol" minWidth="100.0" prefWidth="100.0" text="Updated Date" />
        </columns>
      </TableView>
      <Button fx:id="mainMenuBtn" layoutX="435.0" layoutY="550.0" mnemonicParsing="false" onAction="#toMainMenu" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: brown;" text="Main Menu" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
